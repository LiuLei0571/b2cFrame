<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/toobar"/>

    <com.jinqiao.b2c.compent.ui.widget.EditTextWithDelete
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="用户名"
        android:paddingLeft="@dimen/size_normal"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.jinqiao.b2c.compent.ui.widget.EditTextWithDelete
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:hint="邮箱"
            android:paddingLeft="@dimen/size_normal"
            android:singleLine="true"/>

        <com.jinqiao.b2c.compent.ui.widget.SendSmsSimpleButton
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="@drawable/btn_sms_code"
            android:text="获取验证码"/>
    </LinearLayout>

    <com.jinqiao.b2c.compent.ui.widget.EditTextWithDelete
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="验证码"
        android:paddingLeft="@dimen/size_normal"
        android:singleLine="true"/>

    <com.jinqiao.b2c.compent.ui.widget.EditTextWithDelete
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="新密码"
        android:paddingLeft="@dimen/size_normal"/>

    <com.jinqiao.b2c.compent.ui.widget.EditTextWithDelete
        android:id="@+id/et_password_new"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="确认密码"
        android:paddingLeft="@dimen/size_normal"
        android:singleLine="true"/>

    <com.jinqiao.b2c.compent.ui.widget.CustomButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/size_normal"
        android:layout_marginRight="@dimen/size_normal"
        android:singleLine="true"
        android:text="确认"
        android:textColor="@color/white"
        app:radius="5.5dp"/>
</LinearLayout>