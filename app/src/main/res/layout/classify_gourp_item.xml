<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_father_left_normal"
        android:layout_marginRight="@dimen/margin_father_right_normal"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_classify_group"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_father_left_normal"
        android:layout_toLeftOf="@id/iv_indicator"
        android:gravity="center_vertical"
        android:textColor="@color/color_text_major"
        android:textSize="@dimen/size_normal"/>

</RelativeLayout>