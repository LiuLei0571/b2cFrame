<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/full_back</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textColorHighlight">@color/color_input_hint</item>
        <item name="android:disabledAlpha">1</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoginDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:disabledAlpha">1</item>
    </style>

    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="right_in_animation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="PopupRightAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_right_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_right_exit</item>
    </style>

    <style name="PopupCenterAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_center_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_center_exit</item>
    </style>
    <style name="PopupDrawerAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_right_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_right_exit</item>
    </style>
    <style name="PopupBottomAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_exit</item>
    </style>
    <style name="PopupNoAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/color_input_hint</item>
        <item name="android:textColor">@color/color_text_major</item>
        <item name="android:textSize">@dimen/size_normal_large</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColorHint">@color/color_input_hint</item>
        <item name="android:textColor">@color/color_text_major</item>
        <item name="android:textSize">@dimen/size_normal_large</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@color/btn_background</item>
        <item name="android:textColor">@color/color_text_major</item>
        <item name="android:textSize">@dimen/size_normal_large</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:listViewStyle">@style/List</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="List" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@null</item>
    </style>
    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension" />
        <attr name="bubbleRadius" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPosition" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="arrowCenter" format="boolean" />
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>
</resources>
